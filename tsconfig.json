{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "target": "es2016",
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "module": "commonjs",
    "baseUrl": "./src/", 
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    }, 
    "resolveJsonModule": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true
    
  }
}